{
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-recommended-scss": "^12.0.0"
  },
  "scripts": {
    "lint": "eslint .; stylelint \"assets/**/*.{css,scss}\""
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-restricted-syntax": "off",
      "no-continue": "off",
      "no-param-reassign": "off"
    }
  },
  "stylelint": {
    "validate": [
      "css",
      "scss"
    ],
    "extends": [
      "stylelint-config-recommended-scss",
      "stylelint-config-idiomatic-order"
    ]
  }
}
